---
import BaseLayout from "../layouts/BaseLayout.astro";

const identity = {
    firstName: "Simon",
    type: "Psycho",
    country: "Sweden",
    occupation: "Doctoral Student",
    hobbies: ["birdwatching", "baking", "programming"],
};
---

<BaseLayout>
    <div class="text-center pb-5"><h1>A wild { identity.occupation } appeared!</h1></div>
    <div class="flex justify-center items-center">
      <div class="max-w-sm rounded overflow-hidden shadow-lg border-yellow-300" style="border-width: 0.75rem;">
        <div class="bg-violet-300 flex flex-row items-end justify-between pt-2 pb-1 px-6">
          <div>
            <p class="text-xs text-slate-700">Basic Human</p>
            <p class="text-3xl font-bold text-slate-700">{ identity.firstName }</p>
          </div>
          <div class="flex flex-row items-center justify-between gap-1">
            <p class="font-bold text-slate-700">80 HP</p>
            <img
              width="30px",
              src="/img/psychic_symbol.png",
              alt="Violet circle with open eye inside"
          />
          </div>
        </div>
        <div class="bg-violet-300 px-6">
          <img
            class="w-full shadow-lg border-yellow-300"
            style="border-width: 0.5rem;"
            src="/img/memoji.png"
            alt="Curly man with glasses looking surprised"
          />
        </div>
        <div class="bg-violet-300 px-6 py-4">
          <p class="text-slate-700 text-base py-2">
            <strong>Aquaknarre</strong> -- and some more text.
          </p>
          <hr>
          <p class="text-slate-700 text-base py-2">
            <strong>Donnerschock</strong> -- and some more text.
          </p>
          <hr>
          <p class="text-slate-700 text-base py-2">
            <strong>Psychokinese</strong> -- and some more text.
          </p>
        </div>
        <div class="bg-violet-300 px-6 pb-2">
          <div class="pb-3"><hr></div>
          <span
            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
            >#baking</span
          >
          <span
            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
            >#julia</span
          >
          <span
            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
            >#birds</span
          >
        </div>
      </div>
    </div>
  </BaseLayout>
