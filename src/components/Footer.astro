---
import Icon from "./Icon.astro";
import type { iconPaths } from "./IconPaths";
const currentYear = new Date().getFullYear();

const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  { label: "ORCiD", href: "https://orcid.org/0009-0003-9745-354X", icon: "orcid-logo" },
  { label: "GitHub", href: "https://github.com/simonsteiger", icon: "github-logo" },
];
---

<footer>
    <div class="group">
        <p>
            Written with <a href="https://astro.build/">Astro</a>
        </p>
        <p>&copy; {currentYear} Simon Steiger</p>
    </div>
    <div class="socials">
        {
          iconLinks.map(({ href, icon, label }) => (
            <a href={href} class="social">
              <span class="sr-only">{label}</span>
              <Icon icon={icon} size="2em"/>
            </a>
          ))
        }
      </div>
</footer>
<style>
    footer {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        padding: 3rem 2rem 3rem;
        text-align: center;
        color: var(--gray-400);
        font-size: var(--text-sm);
        flex-shrink: 0; /* Prevent the footer from shrinking */
    }

    /* Rest of the styles remain the same */

    footer a {
        color: var(--gray-400);
        text-decoration: 1px solid underline transparent;
        text-underline-offset: 0.25em;
        transition: text-decoration-color var(--theme-transition);
    }

    footer a:hover,
    footer a:focus {
        text-decoration-color: currentColor;
    }

    .group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .socials {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    @media (min-width: 50em) {
        footer {
            flex-direction: row;
            justify-content: space-between;
            padding: 2.5rem 5rem;
        }

        .group {
            flex-direction: row;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .socials {
            justify-content: flex-end;
        }
    }
</style>
